---
import type { CollectionEntry } from 'astro:content';

interface Props {
  path: CollectionEntry<'paths'>;
  tutorialCount: number;
}

const { path, tutorialCount } = Astro.props;
const { data } = path;
---

<article class="learning-path-card">
  <a href={`/paths/${path.slug}/`} class="path-link">
    <div class="path-indicator">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="12" cy="12" r="10"></circle>
        <polyline points="12 6 12 12 16 14"></polyline>
      </svg>
    </div>

    <div class="path-content">
      <h3 class="path-title">{data.title}</h3>
      <p class="path-description">{data.description}</p>

      <div class="path-meta">
        <span class="meta-item">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
            <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
          </svg>
          {tutorialCount} {tutorialCount === 1 ? 'tutorial' : 'tutorials'}
        </span>

        {data.estimatedTime && (
          <span class="meta-item">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"></circle>
              <polyline points="12 6 12 12 16 14"></polyline>
            </svg>
            {data.estimatedTime}
          </span>
        )}
      </div>
    </div>

    <div class="path-arrow">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="9 18 15 12 9 6"></polyline>
      </svg>
    </div>
  </a>
</article>

<style>
  .learning-path-card {
    background: var(--card-bg);
    border: 2px solid var(--card-border);
    border-radius: 0;
    box-shadow: none;
    transition: transform 0.2s ease, background 0.2s ease;
    position: relative;
    overflow: hidden;
  }

  .learning-path-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--color-border);
  }

  .learning-path-card:hover {
    transform: translateY(-2px);
    background: var(--color-bg-muted);
  }

  .path-link {
    display: grid;
    grid-template-columns: auto 1fr auto;
    align-items: center;
    gap: 1.5rem;
    padding: 1.5rem;
    text-decoration: none;
    color: inherit;
  }

  .path-indicator {
    flex-shrink: 0;
    width: 52px;
    height: 52px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-bg);
    color: var(--color-text);
    border-radius: 0;
    border: 2px solid var(--color-border);
  }

  .path-content {
    flex: 1;
    min-width: 0;
  }

  .path-title {
    margin: 0 0 0.5rem;
    font-size: 1.3rem;
    font-weight: 700;
    color: var(--color-text);
  }

  .path-description {
    margin: 0 0 1rem;
    color: var(--color-text-soft);
    font-size: 0.95rem;
    line-height: 1.5;
  }

  .path-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .meta-item svg {
    flex-shrink: 0;
  }

  .path-arrow {
    flex-shrink: 0;
    color: var(--color-text-muted);
    transition: transform 0.2s ease, color 0.2s ease;
  }

  .learning-path-card:hover .path-arrow {
    transform: translateX(4px);
    color: var(--color-secondary);
  }

  @media (max-width: 640px) {
    .path-link {
      grid-template-columns: 1fr;
      align-items: flex-start;
      gap: 1rem;
    }

    .path-arrow {
      display: none;
    }
  }
</style>

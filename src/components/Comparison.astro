---
interface Props {
  good?: string;
  bad?: string;
  title?: string;
}

const { good, bad, title = 'Comparison' } = Astro.props;
---

<div class="comparison">
  {title && <h4 class="comparison-title">{title}</h4>}
  <div class="comparison-grid">
    {bad && (
      <div class="comparison-side bad">
        <div class="comparison-header">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="15" y1="9" x2="9" y2="15"></line>
            <line x1="9" y1="9" x2="15" y2="15"></line>
          </svg>
          <span>Don't do this</span>
        </div>
        <div class="comparison-content">
          <slot name="bad">
            <pre><code>{bad}</code></pre>
          </slot>
        </div>
      </div>
    )}

    {good && (
      <div class="comparison-side good">
        <div class="comparison-header">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"></circle>
            <polyline points="9 12 11 14 15 10"></polyline>
          </svg>
          <span>Do this instead</span>
        </div>
        <div class="comparison-content">
          <slot name="good">
            <pre><code>{good}</code></pre>
          </slot>
        </div>
      </div>
    )}
  </div>
</div>

<style>
  .comparison {
    margin: 2rem 0;
    border: 2px solid var(--color-border);
    border-radius: 0;
    overflow: hidden;
    background: var(--color-bg);
  }

  .comparison-title {
    margin: 0;
    padding: 0.65rem 1rem;
    background: var(--color-bg-muted);
    border-bottom: 2px solid var(--color-border);
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-text);
  }

  .comparison-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 0;
  }

  .comparison-side {
    background: var(--color-bg);
    border-right: 2px solid var(--color-border);
    --side-accent: var(--color-text);
    --side-soft: var(--color-bg-muted);
  }

  .comparison-side:last-child {
    border-right: none;
  }

  .comparison-side.bad {
    --side-accent: var(--color-advanced);
    --side-soft: var(--color-advanced-bg);
  }

  .comparison-side.good {
    --side-accent: var(--color-beginner);
    --side-soft: var(--color-beginner-bg);
  }

  .comparison-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    background: var(--side-soft);
    border-bottom: 2px solid var(--color-border);
    font-size: 0.875rem;
    font-weight: 700;
    color: var(--side-accent);
  }

  .comparison-header svg {
    flex-shrink: 0;
  }

  .comparison-content {
    padding: 1rem;
  }

  .comparison-content pre {
    margin: 0;
    background: var(--color-bg);
    padding: 1rem;
    border-radius: 0;
    border: 2px solid var(--color-border);
    overflow-x: auto;
  }

  .comparison-content code {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    line-height: 1.5;
  }

  @media (max-width: 768px) {
    .comparison-grid {
      grid-template-columns: 1fr;
    }

    .comparison-side {
      border-right: none;
      border-bottom: 2px solid var(--color-border);
    }

    .comparison-side:last-child {
      border-bottom: none;
    }
  }
</style>

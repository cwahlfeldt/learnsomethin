<style>
  .site-footer {
    margin-top: 6rem;
    padding: 3rem 0 2.5rem;
    border-top: 1px solid var(--color-border);
    background: linear-gradient(135deg, var(--color-bg-soft) 0%, var(--color-bg-accent) 100%);
    position: relative;
  }

  .footer-content {
    text-align: center;
    color: var(--color-text-muted);
  }

  .footer-decoration {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    margin-bottom: 1.25rem;
    font-size: 1.25rem;
    opacity: 0.7;
  }

  .deco-item {
    animation: drift 6s ease-in-out infinite;
    display: inline-block;
  }

  .deco-item:nth-child(1) { animation-delay: 0s; }
  .deco-item:nth-child(2) { animation-delay: 0.5s; }
  .deco-item:nth-child(3) { animation-delay: 1s; }
  .deco-item:nth-child(4) { animation-delay: 1.5s; }
  .deco-item:nth-child(5) { animation-delay: 2s; }

  @keyframes drift {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-6px);
    }
  }

  .footer-text {
    font-size: 0.9375rem;
    margin: 0 0 0.5rem;
  }

  .heart {
    color: var(--color-secondary);
    animation: heartbeat 1.6s ease-in-out infinite;
  }

  @keyframes heartbeat {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.1);
    }
  }

  .footer-text strong {
    color: var(--color-primary);
    font-weight: 700;
  }

  .footer-copy {
    font-size: 0.8125rem;
    color: var(--color-text-muted);
    margin: 0;
  }
</style>

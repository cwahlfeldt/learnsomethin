---
import type { Series } from '../lib/tutorials';
import DifficultyBadge from './DifficultyBadge.astro';

interface Props {
  series: Series;
}

const { series } = Astro.props;

// Get first tutorial (index) for the link
const indexTutorial = series.tutorials.find(t => t.data.seriesOrder === 0) || series.tutorials[0];

// Show first 3 part titles
const visibleParts = series.tutorials.slice(0, 3);
---

<article
  class="series-card tutorial-card"
  data-category={series.category}
  data-difficulty={series.difficulty}
  data-tags=""
  data-title={series.title.toLowerCase()}
>
  <a href={`/tutorials/${indexTutorial.slug}/`} class="card-link">
    <div class="series-indicator">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
        <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
      </svg>
      <span>{series.tutorials.length}-part series</span>
    </div>

    <div class="card-header">
      <h3 class="card-title">{series.title}</h3>
    </div>

    <p class="card-description">{series.description}</p>

    <div class="parts-preview">
      {visibleParts.map((tutorial, index) => (
        <div class="part-item">
          <span class="part-number">{index + 1}.</span>
          <span class="part-title">{tutorial.data.title}</span>
        </div>
      ))}
      {series.tutorials.length > 3 && (
        <div class="part-item more">
          <span>+ {series.tutorials.length - 3} more parts</span>
        </div>
      )}
    </div>

    <div class="card-meta">
      <div class="badges">
        <span class="category-badge">{series.category}</span>
        <DifficultyBadge difficulty={series.difficulty} size="sm" />
      </div>
    </div>
  </a>
</article>

<style>
  .series-card {
    --category-color: var(--color-text);
    --category-soft: var(--color-bg);
    border: 2px solid var(--card-border);
    position: relative;
    background: var(--card-bg);
  }

  .series-card[data-category="programming"] {
    --category-color: var(--color-cat-programming);
    --category-soft: var(--color-cat-programming-soft);
  }

  .series-card[data-category="devops"] {
    --category-color: var(--color-cat-devops);
    --category-soft: var(--color-cat-devops-soft);
  }

  .series-card[data-category="webdev"] {
    --category-color: var(--color-cat-webdev);
    --category-soft: var(--color-cat-webdev-soft);
  }

  .series-card[data-category="systems"] {
    --category-color: var(--color-cat-systems);
    --category-soft: var(--color-cat-systems-soft);
  }

  .series-card[data-category="gamedev"] {
    --category-color: var(--color-cat-gamedev);
    --category-soft: var(--color-cat-gamedev-soft);
  }

  .series-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    width: 6px;
    background: var(--color-border);
    border-radius: 0;
  }

  .series-card:hover::before {
    background: var(--color-secondary);
  }

  .series-indicator {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
    color: var(--color-text);
    font-size: 0.75rem;
    font-weight: 700;
    background: var(--color-bg);
    padding: 0.35rem 0.8rem;
    border-radius: 0;
    border: 2px solid var(--color-border);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .series-indicator svg {
    flex-shrink: 0;
  }

  .card-link {
    display: flex;
    flex-direction: column;
    padding: 1.2rem 1.2rem 1.3rem 1.6rem;
    color: inherit;
    text-decoration: none;
    height: 100%;
    position: relative;
    z-index: 1;
  }

  .card-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 0.5rem;
    margin-bottom: 0.85rem;
  }

  .card-title {
    margin: 0;
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--color-text);
    line-height: 1.35;
  }

  .card-description {
    margin: 0 0 1rem;
    color: var(--color-text-soft);
    font-size: 0.95rem;
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-meta {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-top: auto;
  }

  .badges {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .parts-preview {
    margin: 1rem 0;
    padding: 1rem;
    background: var(--color-bg);
    border-radius: 0;
    border: 2px solid var(--color-border);
  }

  .part-item {
    display: flex;
    gap: 0.5rem;
    padding: 0.5rem 0;
    font-size: 0.875rem;
    color: var(--color-text-soft);
  }

  .part-item:not(:last-child) {
    border-bottom: 1px dashed var(--color-border-soft);
  }

  .part-number {
    color: var(--color-primary);
    font-weight: 700;
    min-width: 1.5rem;
  }

  .part-title {
    flex: 1;
    font-weight: 500;
  }

  .part-item.more {
    color: var(--color-text-muted);
    font-style: italic;
    justify-content: center;
    border-bottom: none;
    padding-top: 0.75rem;
  }

  .category-badge {
    font-size: 0.7rem;
    padding: 0.25rem 0.6rem;
    border-radius: 0;
    background: var(--color-bg);
    color: var(--category-color);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border: 2px solid var(--color-border);
  }
</style>

---
import type { Series } from '../lib/tutorials';
import DifficultyBadge from './DifficultyBadge.astro';

interface Props {
  series: Series;
}

const { series } = Astro.props;

// Get first tutorial (index) for the link
const indexTutorial = series.tutorials.find(t => t.data.seriesOrder === 0) || series.tutorials[0];

// Show first 3 part titles
const visibleParts = series.tutorials.slice(0, 3);
---

<article
  class="series-card tutorial-card"
  data-category={series.category}
  data-difficulty={series.difficulty}
  data-tags=""
  data-title={series.title.toLowerCase()}
>
  <a href={`/tutorials/${indexTutorial.slug}/`} class="card-link">
    <div class="series-indicator">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
        <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
      </svg>
      <span>{series.tutorials.length}-part series</span>
    </div>

    <div class="card-header">
      <h3 class="card-title">{series.title}</h3>
    </div>

    <p class="card-description">{series.description}</p>

    <div class="parts-preview">
      {visibleParts.map((tutorial, index) => (
        <div class="part-item">
          <span class="part-number">{index + 1}.</span>
          <span class="part-title">{tutorial.data.title}</span>
        </div>
      ))}
      {series.tutorials.length > 3 && (
        <div class="part-item more">
          <span>+ {series.tutorials.length - 3} more parts</span>
        </div>
      )}
    </div>

    <div class="card-meta">
      <div class="badges">
        <span class="category-badge">{series.category}</span>
        <DifficultyBadge difficulty={series.difficulty} size="sm" />
      </div>
    </div>
  </a>
</article>

<style>
  .series-card {
    border: 2px solid var(--color-primary);
    position: relative;
    background: linear-gradient(135deg, var(--card-bg) 0%, var(--color-bg-soft) 100%);
  }

  .series-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 6px;
    background: linear-gradient(90deg, var(--color-primary), var(--color-secondary), var(--color-accent));
    border-radius: var(--card-radius) var(--card-radius) 0 0;
    transform: scaleX(1);
  }

  .series-card:hover::before {
    background: linear-gradient(90deg, var(--color-secondary), var(--color-accent), var(--color-primary));
  }

  .series-indicator {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
    color: white;
    font-size: 0.8125rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--color-primary), var(--color-primary-dark));
    padding: 0.375rem 0.875rem;
    border-radius: 100px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    box-shadow: 0 4px 10px -4px rgba(99, 102, 241, 0.5);
  }

  .series-indicator svg {
    flex-shrink: 0;
  }

  .parts-preview {
    margin: 1rem 0;
    padding: 1rem;
    background: var(--card-bg);
    border-radius: 12px;
    border: 2px solid var(--color-border);
  }

  .part-item {
    display: flex;
    gap: 0.5rem;
    padding: 0.5rem 0;
    font-size: 0.875rem;
    color: var(--color-text-soft);
  }

  .part-item:not(:last-child) {
    border-bottom: 1px dashed var(--color-border-soft);
  }

  .part-number {
    color: var(--color-primary);
    font-weight: 700;
    min-width: 1.5rem;
  }

  .part-title {
    flex: 1;
    font-weight: 500;
  }

  .part-item.more {
    color: var(--color-text-muted);
    font-style: italic;
    justify-content: center;
    border-bottom: none;
    padding-top: 0.75rem;
  }
</style>

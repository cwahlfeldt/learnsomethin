---
import type { CollectionEntry } from 'astro:content';
import BaseLayout from './BaseLayout.astro';
import DifficultyBadge from '../components/DifficultyBadge.astro';

interface Props {
  title: string;
  tutorial: CollectionEntry<'tutorials'>;
  headings: any[];
}

const { title, tutorial, headings } = Astro.props;
const { data } = tutorial;

const formattedDate = data.dateCreated.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

const updatedDate = data.dateUpdated ? data.dateUpdated.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
}) : null;
---

<BaseLayout title={title} description={data.description}>
  <article class="tutorial-article">
    <div class="container">
      <div class="article-layout" data-toc="closed">
        <div class="article-sidebar">
          {headings.length > 0 && (
            <>
              <button class="toc-toggle" type="button" aria-expanded="false" aria-controls="toc-panel">
                Contents
              </button>
              <nav id="toc-panel" class="toc" hidden>
                <h3 class="toc-title">Contents</h3>
                <ul class="toc-list">
                  {headings.map(heading => (
                    <li class={`toc-item toc-depth-${heading.depth}`}>
                      <a href={`#${heading.slug}`}>{heading.text}</a>
                    </li>
                  ))}
                </ul>
              </nav>
            </>
          )}
        </div>

        <div class="article-main">
          <header class="article-header">
            <a href="/tutorials/" class="back-link">← All Tutorials</a>

            <h1 class="article-title">{data.title}</h1>

            <div class="article-meta">
              <div class="meta-badges">
                <span class="category-badge">{data.category}</span>
                <DifficultyBadge difficulty={data.difficulty} />
              </div>

              <div class="meta-info">
                <time datetime={data.dateCreated.toISOString()}>
                  {formattedDate}
                </time>
                {updatedDate && (
                  <span class="updated-date">Updated: {updatedDate}</span>
                )}
                {data.estimatedTime && (
                  <span class="reading-time">{data.estimatedTime}</span>
                )}
              </div>

              {data.tags.length > 0 && (
                <div class="article-tags">
                  {data.tags.map(tag => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
              )}
            </div>
          </header>

          <div class="article-content prose">
            <slot />
          </div>
        </div>
      </div>
    </div>
  </article>
</BaseLayout>

<style>
  .tutorial-article {
    padding: 3rem 0 4.5rem;
  }

  .article-layout {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 1.5rem;
    align-items: start;
  }

  .article-layout[data-toc="open"] {
    grid-template-columns: 220px 1fr;
    gap: 3rem;
  }

  .article-sidebar {
    position: sticky;
    top: 110px;
  }


  .toc-toggle {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.45rem 0.7rem;
    border: 2px solid var(--color-border);
    background: var(--color-bg);
    color: var(--color-text);
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    cursor: pointer;
  }

  .toc-toggle::after {
    content: '+';
    font-size: 0.9rem;
  }

  .toc-toggle[aria-expanded="true"]::after {
    content: '−';
  }

  .toc {
    background: var(--card-bg);
    border: 2px solid var(--color-border);
    border-radius: 0;
    padding: 1rem;
    margin-top: 0.75rem;
    width: 100%;
  }

  .toc-title {
    margin: 0 0 0.75rem;
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .toc-item {
    margin-bottom: 0.5rem;
  }

  .toc-item a {
    font-size: 0.85rem;
    color: var(--color-text-soft);
    text-decoration: none;
    display: block;
    line-height: 1.4;
    padding-left: 0.5rem;
    border-left: 2px solid transparent;
  }

  .toc-item a:hover {
    color: var(--color-primary);
    border-left-color: var(--color-primary);
  }

  .toc-depth-2 {
    padding-left: 0;
  }

  .toc-depth-3 {
    padding-left: 1rem;
    font-size: 0.8125rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.8rem;
    color: var(--color-text-muted);
    text-decoration: none;
    margin-bottom: 1rem;
    padding: 0.35rem 0.6rem;
    border-radius: 0;
    border: 2px solid var(--color-border);
    background: var(--color-bg);
  }

  .back-link:hover {
    color: var(--color-primary);
  }

  .article-title {
    margin: 0 0 1.5rem;
    font-size: 2.6rem;
    line-height: 1.2;
  }

  .article-meta {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1rem 1.25rem;
    border: 2px solid var(--color-border);
    border-radius: 0;
    background: var(--color-bg-soft);
    margin-bottom: 2rem;
  }

  .meta-badges {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .category-badge {
    font-size: 0.75rem;
    padding: 0.25rem 0.6rem;
    border-radius: 0;
    background: var(--color-bg);
    color: var(--color-text);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border: 2px solid var(--color-border);
  }

  .meta-info {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    font-size: 0.85rem;
    color: var(--color-text-muted);
  }

  .updated-date::before {
    content: '•';
    margin-right: 1rem;
  }

  .reading-time::before {
    content: '•';
    margin-right: 1rem;
  }

  .article-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    font-size: 0.75rem;
    padding: 0.25rem 0.65rem;
    border-radius: 0;
    background: var(--color-bg);
    color: var(--color-text-muted);
    border: 1px dashed var(--color-border);
  }

  @media (max-width: 968px) {
    .article-layout {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .article-sidebar {
      position: static;
      order: -1;
    }

    .toc {
      max-width: 100%;
    }

    .article-title {
      font-size: 2rem;
    }
  }
</style>

<script>
  function initTocToggle() {
    const toggle = document.querySelector('.toc-toggle');
    const panel = document.getElementById('toc-panel');
    const layout = document.querySelector('.article-layout');
    if (!toggle || !panel || !layout) return;

    toggle.setAttribute('aria-expanded', 'false');
    panel.hidden = true;
    layout.setAttribute('data-toc', 'closed');

    toggle.addEventListener('click', () => {
      const isOpen = toggle.getAttribute('aria-expanded') === 'true';
      toggle.setAttribute('aria-expanded', String(!isOpen));
      panel.hidden = isOpen;
      layout.setAttribute('data-toc', isOpen ? 'closed' : 'open');
    });
  }

  initTocToggle();
  document.addEventListener('astro:page-load', initTocToggle);
</script>
